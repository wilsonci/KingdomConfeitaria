[core]
    # Configuração de encoding para UTF-8
    autocrlf = true
    safecrlf = true
    # Força UTF-8 para todos os arquivos de texto
    quotepath = false
    # Ignora diferenças de case no Windows
    ignorecase = true
    # Configuração de encoding
    fileEncoding = utf-8
    # Previne problemas com caracteres especiais
    precomposeunicode = true

[gui]
    encoding = utf-8

[i18n]
    # Força commit messages em UTF-8
    commitEncoding = utf-8
    # Força log output em UTF-8
    logOutputEncoding = utf-8

[diff]
    # Usa UTF-8 para diffs
    renames = true

[merge]
    # Configuração de merge para evitar problemas
    tool = vimdiff
    # Mantém encoding correto durante merge
    keepBackup = false

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

